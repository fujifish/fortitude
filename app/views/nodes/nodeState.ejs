<div class="box-header with-border">
  <h3 class="box-title"><%= title %> State</h3>
</div>
<div class="box-body">
  <%

    for (var i = 0; i < states.length; ++i) {
      var state = states[i];
  %>
  <div class="info-box" style="position: relative" name="StateOfModuleInfoBox" data-index="<%= i %>">
    <span class="info-box-icon bg-blue">
      <!-- "line-height: 90px" is required because of a bug in chrome -->
      <i style="line-height: 90px;" class="fa <%= state.icon || 'fa-cube' %>"></i>
    </span>
    <div class="info-box-content">
      <span class="info-box-text"><%= state.name %> <%= state.version %></span>
      <span class="info-box-text">
        <% if (state.state.start && state.state.start.data && state.state.start.data.started) { %>
        <span class="text-green"><i class="fa fa-play"></i> Started</span>
        <% } else { %>
        <span class="text-red"><i class="fa fa-stop"></i> Stopped</span>
        <% } %>
      </span>
      <div class="btn-group btn-group-sm" style="position: absolute; bottom: 4px; display: none" data-index="<%= i %>">
        <button type="button" class="btn btn-default" data-toggle="tooltip" title="Edit"><i class="fa fa-pencil"></i></button>
        <button type="button" class="btn btn-default" data-toggle="tooltip" title="Details"><i class="fa fa-eye"></i></button>
        <button type="button" class="btn btn-default" data-toggle="tooltip" title="Remove"><i class="fa fa-remove"></i></button>
      </div>
    </div>
  </div>
  <% } %>
</div>

